extends layouts/login-layout.pug

block content 
    .login-wrapper
        .login-container 
            h1 Login 
            form.login-form(method="post") 
                p.error-form #{errorMessage}
                input(type="text", name="logUsername", placeholder="Username or email",value='' required="")
                input(type="password", name="logPassword", placeholder="Password", value='' required="")
                input(type="submit", value="Login")
            a(href="/register") Need an account? Register here.